<% flash.each do |type, msg| %>
	<%= content_tag :div, nil, class: ['container w-75', bootstrap_class_for(type) ], role: 'alert' do  %>
		<%= content_tag :div do %>
			<%= button_tag "", { class: "btn-close",  data: {bs_dismiss: 'alert'}, "aria-label": "Close", type: 'button', name: nil } %>
			<%= content_tag :p, class: 'mb-0' do %>
				<%= msg %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
