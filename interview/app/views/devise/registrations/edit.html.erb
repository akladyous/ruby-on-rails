<div class="container mt-4">
	<div class="row justify-content-md-center">
		<div class="col col-lg-5 col-md-5 col-sm-5">
			<div class="card">
				<div class="card-header text-center">
					Update User Account
				</div>
				<div class="card-body">
					<%# resource_name.to_s.humanize %>
					<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, "data-turbo": false }) do |form| %>
						<%= render 'avatar', form: form %>
						<div class="form-group mb-2">
							<%= form.label :email, { class: 'form-label'} %>
							<%= form.email_field :email, { class: 'form-control', autofocus: true, autocomplete: "off", }  %>
							<%= object_errors_for? resource, :email %>
						</div>
						<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
							<div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
						<% end %>
						<div class="form-group mb-2">
							<%= form.label :password, { class: 'form-label'} %>
							<%= form.password_field :password, { class: "form-control ", autocomplete: "off", placeholder: "leave blank if you don't want to change it"} %>
							<%= object_errors_for? resource, :password %>
						</div>
						<div class="form-group mb-2">
							<%= form.label :password_confirmation, { class: 'form-label'} %>
							<%= form.password_field :password_confirmation, { class: 'form-control', autocomplete: "off" } %>
							<%= object_errors_for? resource, :password_confirmation %>
						</div>
						<div class="form-group mb-2">
							<%= form.label :current_password, { class: 'form-label'} %>
							<%= form.password_field :current_password, { class: 'form-control', autocomplete: "off", placeholder: "required to confirm your changes" } %>
							<%= object_errors_for? resource, :current_password %>
						</div>
						<div class="form-control text-center border-0 mt-3">
							<%= form.submit "Update", { class: "btn btn-light rounded-pill py-2 px-4"} %>
						</div>
					<% end %>
					<div class="form-group mb-2">
						<%= render "devise/shared/links" %>
						<%= button_to "Cancel my account",
                                        registration_path(resource_name),
                                        data: { confirm: "Are you sure?" },
                                        class: "link-primary bg-transparent border-0 p-0 text-decoration-underline",
                                        method: :delete
                                    %>
						<%# link_to "Back", :back %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
