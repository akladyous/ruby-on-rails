<%= turbo_frame_tag task do %>
	<%= turbo_stream_from task %>
	<div class="container border-3 bg-light mb-2">
		<div class="row">
			<div class="col-10 text-start">
				<div class="container">
					<p><%= task.name %></p>
					<%= link_to "open #{task.name}", task, data: {turbo_frame: "_top"} %>
				</div>
			</div>
			<div class="col-1 text-end">
				<%= link_to "Edit", edit_task_path(task), class: "btn btn-primary" %>
			</div>
			<div class="col-1 text-end">
				<%= button_to "Delete", task_path(task), method: :delete, class: "btn btn-primary" %>
			</div>
		</div>
	</div>
<% end %>
