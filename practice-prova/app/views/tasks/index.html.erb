<p style="color: green"><%= notice %></p>
<main class="container w-75 px-5" id="tasks">
	<%= turbo_frame_tag 'task_header' do %>
		<div class="container mb-2">
			<div class="row">
				<div class="col-10 text-start">
					<p class="fs-4">Tasks</p>
				</div>
				<div class="col-2 text-end">
					<%= link_to "New task", new_task_path, data: { turbo_frame: dom_id(Task.new) }, class: "btn btn-primary" %>
				</div>
			</div>
		</div>
	<% end %>
	<div class="container">
		<%= turbo_frame_tag Task.new %>
		<%= turbo_frame_tag "tasks_list" do %>
			<% @tasks.each do |task| %>
				<%= render task %>
			<% end %>
		<% end %>
	</div>
</main>
<%= console %>
