<div class="container w-75 mt-5" id="posts">
	<%= turbo_frame_tag "new_posts_section" do %>
		<div class="container my-3">
			<%= link_to 'new post', new_post_path, data: {turbo_frame: dom_id(Post.new)} %>
		</div>
	<% end %>
</div>
<div class="container w-75 mt-5" id="posts">
	<%= turbo_frame_tag Post.new %>
	<%= turbo_frame_tag "all_posts"  do %>
		<% @posts.each do |post| %>
			<%= turbo_frame_tag dom_id(post), src: post_path(post) %>
			<%# render @post %>
		<% end %>
	<% end %>
</div>
<%= console %>
