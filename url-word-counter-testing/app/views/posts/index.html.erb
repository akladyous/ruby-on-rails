<%= notice %>
<div class="container">
	<h1>Posts</h1>
	<div id="posts">
		<% @posts.each do |post| %>
			<%# render post %>
			<p>
				<%= post.title.strip.truncate(50)%>
			</p>
			<div>
				<%= link_to "Show this post", post %>
			</div>
		<% end %>
	</div>
	<%= link_to "New post", new_post_path %>
</div>
